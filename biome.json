{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"lineWidth": 80,
			"semicolons": "always",
			"quoteStyle": "double",
			"indentStyle": "space",
			"indentWidth": 2,
			"jsxQuoteStyle": "double",
			"trailingComma": "all",
			"arrowParentheses": "always",
			"attributePosition": "auto",
			"bracketSpacing": true,
			"lineEnding": "lf",
			"bracketSameLine": true,
			"quoteProperties": "preserve"
		}
	}
}
